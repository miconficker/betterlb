{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Legislative Branch",
  "description": "Schema for municipal legislative council data allowing null for optional fields",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["slug", "branch", "chamber"],
    "properties": {
      "slug": { "type": "string" },
      "branch": { "type": "string" },
      "chamber": { "type": "string" },
      "address": { "type": ["string", "null"] },
      "trunkline": { "type": ["string", "null"] },
      "website": {
        "type": ["string", "null"],
        "format": "uri"
      },
      "officials": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["role", "name"],
          "properties": {
            "role": { "type": "string" },
            "name": { "type": "string" },
            "contact": { "type": ["string", "null"] },
            "website": {
              "type": ["string", "null"],
              "format": "uri"
            }
          }
        }
      },
      "permanent_committees": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["committee", "chairperson"],
          "properties": {
            "committee": { "type": "string" },
            "chairperson": { "type": "string" },
            "members": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": ["string", "null"] },
                  "role": { "type": ["string", "null"] }
                }
              }
            }
          }
        }
      }
    }
  }
}
