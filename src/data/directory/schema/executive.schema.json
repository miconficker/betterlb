{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Executive Leadership",
  "description": "Schema for municipal executive leaders (Elected and Appointed)",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["slug", "name", "role", "isElected"],
    "properties": {
      "slug": { "type": "string" },
      "name": { "type": "string" },
      "role": { "type": "string" },
      "office": { "type": "string" },
      "address": { "type": "string" },
      "phone": { "type": "string" },
      "email": { "type": "string", "format": "email" },
      "website": { "type": "string", "format": "uri" },
      "isElected": { "type": "boolean" }
    }
  }
}
