{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Municipal Departments",
  "description": "Schema for local government administrative offices",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["slug", "office_name"],
    "properties": {
      "slug": {
        "type": "string",
        "description": "URL-friendly identifier"
      },
      "office_name": {
        "type": "string",
        "description": "Official name of the office"
      },
      "address": {
        "type": ["string", "null"]
      },
      "trunkline": {
        "oneOf": [
          {
            "type": "array",
            "items": { "type": ["string", "null"] }
          },
          { "type": "null" }
        ],
        "description": "Array of phone numbers (items can be null) or null"
      },
      "website": {
        "type": ["string", "null"]
      },
      "department_head": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "name": { "type": ["string", "null"] },
              "contact": { "type": ["string", "null"] },
              "email": { "type": ["string", "null"] }
            }
          },
          { "type": "null" }
        ]
      }
    }
  }
}
