{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Municipal Departments",
  "description": "Schema for local government administrative offices",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["slug", "office_name"],
    "properties": {
      "slug": { "type": "string" },
      "office_name": { "type": "string" },
      "address": { "type": "string" },
      "trunkline": {
        "type": "array",
        "items": { "type": "string" }
      },
      "website": { "type": "string" },
      "department_head": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "contact": { "type": "string" },
          "email": { "type": "string" }
        }
      }
    }
  }
}
