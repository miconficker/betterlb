{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bettergov.ph/schemas/service_categories.schema.json",
  "title": "Service Categories",
  "description": "Schema for Philippine government service categories",
  "type": "object",
  "required": ["categories"],
  "properties": {
    "categories": {
      "type": "array",
      "description": "List of service categories",
      "minItems": 1,
      "items": {
        "type": "object",
        "description": "A single government service category",
        "required": ["name", "slug", "description"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the service category",
            "minLength": 1
          },
          "slug": {
            "type": "string",
            "description": "URL-friendly identifier for the category",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
          },
          "description": {
            "type": "string",
            "description": "Short explanation of the services included in this category",
            "minLength": 1
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
