{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bettergov.ph/schemas/services.schema.json",
  "title": "Government Services",
  "description": "Schema for Philippine government services data",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "service",
      "url",
      "id",
      "slug",
      "published",
      "featured",
      "category",
      "subcategory",
      "createdAt",
      "updatedAt"
    ],
    "properties": {
      "service": {
        "type": "string",
        "description": "Name or description of the government service",
        "minLength": 1
      },
      "url": {
        "type": "string",
        "description": "URL to access the service",
        "format": "uri",
        "pattern": "^https?://"
      },
      "id": {
        "type": "string",
        "description": "Unique identifier",
        "minLength": 1
      },
      "slug": {
        "type": "string",
        "description": "URL-friendly slug for the service",
        "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
        "minLength": 1
      },
      "published": {
        "type": "boolean",
        "description": "Whether the service is published and visible to users"
      },
      "featured": {
        "type": "boolean",
        "description": "Whether the service is featured on the homepage or category page"
      },
      "category": {
        "type": "object",
        "description": "Primary category of the service",
        "required": ["name", "slug"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Human-readable category name",
            "minLength": 1
          },
          "slug": {
            "type": "string",
            "description": "URL-friendly category slug",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
            "minLength": 1
          }
        },
        "additionalProperties": false
      },
      "subcategory": {
        "type": "object",
        "description": "Subcategory of the service for more specific classification",
        "required": ["name", "slug"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Human-readable subcategory name",
            "minLength": 1
          },
          "slug": {
            "type": "string",
            "description": "URL-friendly subcategory slug",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
            "minLength": 1
          }
        },
        "additionalProperties": false
      },
      "createdAt": {
        "type": "string",
        "description": "ISO 8601 timestamp when the service was created",
        "format": "date-time"
      },
      "updatedAt": {
        "type": "string",
        "description": "ISO 8601 timestamp when the service was last updated",
        "format": "date-time"
      },
      "steps": {
        "type": "array",
        "description": "Step-by-step process for the service",
        "items": {
          "type": "string"
        }
      },
      "requirements": {
        "type": "array",
        "description": "Requirements for the service",
        "items": {
          "type": "string"
        }
      },
      "faqs": {
        "type": "array",
        "description": "Frequently asked questions",
        "items": {
          "type": "object",
          "required": ["question", "answer"],
          "properties": {
            "question": { "type": "string" },
            "answer": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "office": {
        "type": "object",
        "description": "Office information for the service",
        "required": ["name", "address"],
        "properties": {
          "name": { "type": "string" },
          "address": { "type": "string" },
          "phone": { "type": "string" },
          "email": { "type": "string" }
        },
        "additionalProperties": false
      },
      "relatedServices": {
        "type": "array",
        "description": "Other related services",
        "items": {
          "type": "object",
          "required": ["service", "slug"],
          "properties": {
            "service": { "type": "string" },
            "slug": { "type": "string" },
            "category": {
              "type": "object",
              "required": ["name", "slug"],
              "properties": {
                "name": { "type": "string" },
                "slug": { "type": "string" }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "quickInfo": {
        "type": "array",
        "description": "Quick info cards (processing time, fee, who can apply, appointment type)",
        "items": {
          "type": "object",
          "required": ["label", "value"],
          "properties": {
            "label": { "type": "string" },
            "value": { "type": "string" }
          },
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false
  },
  "minItems": 0
}
